{
  "name": "tessera",
  "version": "0.1.0",
  "description": "A next-generation deep zoom image renderer built with WebGPU",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm --filter './packages/**' build",
    "build:demo": "echo 'Demo build not configured yet'",
    "test": "pnpm --filter './packages/**' test",
    "test:coverage": "pnpm --filter './packages/**' test --coverage",
    "lint": "oxlint",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "typecheck": "pnpm --filter './packages/**' typecheck",
    "clean": "pnpm --filter './packages/**' exec rm -rf dist",
    "bundle:analyze": "rolldown --config rolldown.config.js",
    "size-limit": "size-limit",
    "lighthouse:ci": "lhci autorun",
    "dependency:check": "taze --write",
    "dependency:report": "taze --output dependency-report.md --mode default"
  },
  "keywords": [
    "image-viewer",
    "deep-zoom",
    "webgpu",
    "medical-imaging",
    "microscopy",
    "annotations"
  ],
  "author": "Adrian Darian",
  "license": "MIT with Commercial Attribution Requirement",
  "devDependencies": {
    "@types/node": "catalog:",
    "@lhci/cli": "catalog:",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "rolldown": "catalog:",
    "rollup-plugin-visualizer": "catalog:",
    "size-limit": "catalog:",
    "taze": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "@vitest/coverage-v8": "catalog:"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "size-limit": [
    {
      "path": "packages/core/dist/bundle.js",
      "limit": "500 KB"
    },
    {
      "path": "packages/rendering/dist/bundle.js",
      "limit": "300 KB"
    },
    {
      "path": "packages/annotations/dist/bundle.js",
      "limit": "200 KB"
    },
    {
      "path": "packages/tools/dist/bundle.js",
      "limit": "150 KB"
    },
    {
      "path": "packages/geometry/dist/bundle.js",
      "limit": "100 KB"
    },
    {
      "path": "packages/text/dist/bundle.js",
      "limit": "250 KB"
    },
    {
      "path": "packages/formats/dist/bundle.js",
      "limit": "200 KB"
    },
    {
      "path": "packages/export/dist/bundle.js",
      "limit": "150 KB"
    },
    {
      "path": "packages/import/dist/bundle.js",
      "limit": "100 KB"
    },
    {
      "path": "packages/units/dist/bundle.js",
      "limit": "100 KB"
    },
    {
      "path": "packages/workers/dist/bundle.js",
      "limit": "100 KB"
    },
    {
      "path": "packages/graph/dist/bundle.js",
      "limit": "100 KB"
    },
    {
      "path": "packages/utils/dist/bundle.js",
      "limit": "50 KB"
    },
    {
      "path": "packages/events/dist/bundle.js",
      "limit": "50 KB"
    }
  ]
}

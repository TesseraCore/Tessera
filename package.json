{
  "name": "tessera",
  "version": "0.1.0",
  "description": "A next-generation deep zoom image renderer built with WebGPU",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm --filter './packages/**' build",
    "test": "pnpm --filter './packages/**' test",
    "lint": "oxlint",
    "format": "oxfmt",
    "typecheck": "pnpm --filter './packages/**' typecheck",
    "clean": "pnpm --filter './packages/**' exec rm -rf dist"
  },
  "keywords": [
    "image-viewer",
    "deep-zoom",
    "webgpu",
    "medical-imaging",
    "microscopy",
    "annotations"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "oxfmt": "latest",
    "oxlint": "latest",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

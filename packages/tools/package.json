{
  "name": "@tessera/tools",
  "version": "0.1.0",
  "description": "Drawing and editing tools for Tessera",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",

    "@tessera/tools": "workspace:*",
    "@tessera/events": "workspace:*",
    "@tessera/units": "workspace:*",
    "@tessera/utils": "workspace:*",
    "@tessera/geometry": "workspace:*",
    "@tessera/text": "workspace:*",
    "@tessera/graph": "workspace:*",
    "@tessera/formats": "workspace:*",
    "@tessera/import": "workspace:*",
    "@tessera/export": "workspace:*",
    "@tessera/workers": "workspace:*"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}


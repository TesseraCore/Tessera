{
  "name": "tessera",
  "version": "0.1.0",
  "description": "A next-generation deep zoom image renderer built with WebGPU",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
